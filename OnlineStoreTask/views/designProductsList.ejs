<%- include('./designHeader'); %>
<div class="container-md">
    <div class="row">
        <p>Refine by: </p>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="row">
                <div class="d-flex justify-content-between">
                    <a class="description-link" data-bs-toggle="collapse" href="#collapseGender" role="button"
                        aria-expanded="false" aria-controls="collapseGender">
                        Gender
                    </a>
                    <button class="description-button" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseGender" aria-expanded="false" aria-controls="collapseGender">
                        <i class="bi bi-dash-square"></i>
                    </button>
                </div>
                <div class="row collapse mt-3" id="collapseGender">
                    <div>
                        <i class="text-danger bi bi-check-lg invisible"></i>
                        <span class=" ms-1 option">Mens</span>
                    </div>
                    <div>
                        <i class="text-danger bi bi-check-lg invisible"></i>
                        <span class="ms-1 option">Womens</span>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="d-flex justify-content-between border-top border-2">
                    <a class="description-link" data-bs-toggle="collapse" href="#collapseCategory" role="button"
                        aria-expanded="false" aria-controls="collapseCategory">
                        Category
                    </a>
                    <button class="description-button" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseCategory" aria-expanded="false" aria-controls="collapseCategory">
                        <i class="bi bi-dash-square"></i>
                    </button>
                </div>
                <div class="row collapse mt-3" id="collapseCategory">
                    <div>
                        <i class="text-danger bi bi-check-lg invisible"></i><span class="ms-1 option">Clothing</span>
                    </div>
                    <div><i class="text-danger bi bi-check-lg invisible"></i><span
                            class="ms-1 option">Accessories</span>
                    </div>
                    <div><i class="text-danger bi bi-check-lg invisible"></i><span class="ms-1 option">Jewelry</span>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="d-flex justify-content-between border-top border-2">
                    <a class="description-link" data-bs-toggle="collapse" href="#collapseSubCategory" role="button"
                        aria-expanded="false" aria-controls="collapseSubCategory">
                        Product Type
                    </a>
                    <button class="description-button" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseSubCategory" aria-expanded="false" aria-controls="collapseSubCategory">
                        <i class="bi bi-dash-square"></i>
                    </button>
                </div>
                <div class="row collapse mt-3" id="collapseSubCategory">
                    <div><i class="text-danger bi bi-check-lg invisible"></i><span class=" ms-1 option">Shorts</span>
                    </div>
                    <div><i class="text-danger bi bi-check-lg invisible"></i><span class=" ms-1 option">Jackets</span>
                    </div>
                    <div><i class="text-danger bi bi-check-lg invisible"></i><span class=" ms-1 option">Suits</span>
                    </div>
                    <div><i class="text-danger bi bi-check-lg invisible"></i><span class=" ms-1 option">Pants</span>
                    </div>
                    <div><i class="text-danger bi bi-check-lg invisible"></i><span
                            class=" ms-1 option">Dress-shirts</span></div>
                    <div><i class="text-danger bi bi-check-lg invisible"></i><span class=" ms-1 option">Gloves</span>
                    </div>
                    <div><i class="text-danger bi bi-check-lg invisible"></i><span class=" ms-1 option">Luggage</span>
                    </div>
                    <div><i class="text-danger bi bi-check-lg invisible"></i><span class=" ms-1 option">Tops</span>
                    </div>
                    <div><i class="text-danger bi bi-check-lg invisible"></i><span class=" ms-1 option">Bottoms</span>
                    </div>
                    <div><i class="text-danger bi bi-check-lg invisible"></i><span class=" ms-1 option">Dresses</span>
                    </div>
                    <div><i class="text-danger bi bi-check-lg invisible"></i><span class=" ms-1 option">Earrings</span>
                    </div>
                    <div><i class="text-danger bi bi-check-lg invisible"></i><span class="ms-1 option">Necklaces</span>
                    </div>
                    <div><i class="text-danger bi bi-check-lg invisible"></i><span class=" ms-1 option">Shoes</span>
                    </div>
                    <div><i class="text-danger bi bi-check-lg invisible"></i><span class=" ms-1 option">Outfits</span>
                    </div>
                    <div><i class="text-danger bi bi-check-lg invisible"></i><span class=" ms-1 option">Scarves</span>
                    </div>
                    <div><i class="text-danger bi bi-check-lg invisible"></i><span class=" ms-1 option">Bracelets</span>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="d-flex justify-content-between border-top border-2">
                    <a class="description-link" data-bs-toggle="collapse" href="#collapsePrice" role="button"
                        aria-expanded="false" aria-controls="collapsePrice">
                        Price
                    </a>
                    <button class="description-button" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapsePrice" aria-expanded="false" aria-controls="collapsePrice">
                        <i class="bi bi-dash-square"></i>
                    </button>
                </div>
                <div class="row collapse mt-2" id="collapsePrice">
                    <p>
                        <input class="text-center w-100" type="text" id="amount" readonly
                            style="border:0; color:#f61f1f; font-weight:bold;">
                    </p>
                    <div id="slider-range" class="mx-auto w-75 mb-4"></div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="d-flex justify-content-between border-top border-2">
                    <a class="description-link" data-bs-toggle="collapse" href="#collapseColor" role="button"
                        aria-expanded="false" aria-controls="collapseColor">
                        Color
                    </a>
                    <button class="description-button" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseColor" aria-expanded="false" aria-controls="collapseColor">
                        <i class="bi bi-dash-square"></i>
                    </button>
                </div>
                <div class="row collapse mt-2" id="collapseColor">
                    <div class="colors">
                        <div class="color d-inline-block color-selected" data-color="Black"></div>
                        <div class="color d-inline-block" data-color="Green"></div>
                        <div class="color d-inline-block" data-color="White"></div>
                        <div class="color d-inline-block" data-color="Red"></div>
                        <div class="color d-inline-block" data-color="Blue"></div>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="d-flex justify-content-between border-top border-2">
                    <a class="description-link" data-bs-toggle="collapse" href="#collapseSize" role="button"
                        aria-expanded="false" aria-controls="collapseSize">
                        Size
                    </a>
                    <button class="description-button" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseSize" aria-expanded="false" aria-controls="collapseSize">
                        <i class="bi bi-dash-square"></i>
                    </button>
                </div>
                <div class="row collapse mt-2" id="collapseSize">
                    <div class="sizes">
                        <div class="size d-inline-block size-selected" data-size="s">s</div>
                        <div class="size d-inline-block" data-size="m">m</div>
                        <div class="size d-inline-block" data-size="l">l</div>
                        <div class="size d-inline-block" data-size="xl">xl</div>
                        <div class="size d-inline-block" data-size="xxl">xxl</div>
                    </div>
                </div>
            </div>
            <div class="row mt-2 justify-content-center border-top border-2">
                <button class="w-50 resetbtn mt-3">Reset Filters</button>
            </div>
        </div>
        <div class="col-md-9">
            <div class="row d-flex justify-content-center">
                <div id="products-list" class="row">
                    <% _.each(products, (product) => { %>
                    <div class="col-md-4 pb-5 px-5">
                        <div class="product-card">
                            <div class="d-none item-id" data-id="<%= product.id %>"></div>
                            <div class="pr-image">
                                <% if(product.images) { %>
                                <img src="/images/<%= product.images.medium[0] %>" class="img-fluid mx-auto d-block">
                                <% } %>
                            </div>
                            <div class="av-colors w-100 ps-2 my-1">
                                <% if(product.images) { %>
                                <% _.each(product.images.swatch, (link) => { %>
                                <img src="/images/<%= link %>" class="card-color d-inline-block">
                                <% }); %>
                                <% } %>
                            </div>
                            <div class="pr-name w-100 ps-2">
                                <span><%= product.name %></span>
                            </div>
                            <div class="pr-price w-100 border-top border-2 ps-2">
                                <span class="pr-price-value"><%= product.price %></span>
                                <span class="pr-price-currency">EUR</span>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="row d-flex justify-content-between">

            </div>
        </div>

    </div>
</div>
</div>
